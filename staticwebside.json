{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
	    "staticwebsitestracc": {           
            "type": "string",
            "defaultValue": "[concat(uniqueString(resourceGroup().id),'strg')]",
            "metadata": {
                "description": "Name of the static web site storage account"
            }
        }
	},
	"variables": {},
	"resources": [
		{
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-04-01",
            "name": "[parameters('staticwebsitestracc')]",
            "location": "[resourceGroup().location]",
            "comments": "This storage account is used to store static web site (SPA).",
            "sku": {
                "name": "Standard_RAGRS",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "properties": {
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [],
                    "ipRules": [],
                    "defaultAction": "Allow"
                },
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                    "services": {
                        "file": {
                            "enabled": true
                        },
                        "blob": {
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                },
                "accessTier": "Hot"
            }
        }
	]
}
